<h1>Pirate</h1>
<div class="pirate">
    <h3>Name: <%=@pirate.name%><br>
    <h4>Weight: <%=@pirate.weight%></h4><br>
    <h4>Height: <%=@pirate.height%></h4><br>
</div><br>
<h1>Ships</h1>
<%@ships.each do |ship_obj|%>
    <div class="ships">
        <p>Name: <%=ship_obj.name%></p><br>
        <p>Type: <%=ship_obj.type%></p><br>
        <p>Booty: <%=ship_obj.booty%></p><br>
    </div>
<%end%>
