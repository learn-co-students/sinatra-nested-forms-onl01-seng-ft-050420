<h1>Display your Pirate here</h1>
<div class="pirate">
    <h3>Name: <%= @pirate.name%></h3><br>
    <h4>Weight: <%= @pirate.weight%></h4><br>
    <h4>Height: <%= @pirate.height%> Inches</h4>
</div><br>
<h2>Display your first ship here</h2>
<% @ships.each.with_index do |ship, index|%>
<div class="ship">
    <%if index == 0 %>
    <p>Name: <%= ship.name %></p>
    <p>Type: <%= ship.type %></p>
    <p>Booty: <%= ship.booty %></p>
    <% end %>
<% end %>
</div><br>
<h2>Display your second ship here</h2>
<% @ships.each.with_index do |ship, index|%>
<div class="ship">
    <%if index == 1 %>
    <p>Name: <%= ship.name %></p>
    <p>Type: <%= ship.type %></p>
    <p>Booty: <%= ship.booty %></p>
    <% end %>
<% end %>
</div><br>
